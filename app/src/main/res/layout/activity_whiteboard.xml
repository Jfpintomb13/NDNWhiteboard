<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ucla.cs.ndnwhiteboard.WhiteboardActivity"
    android:background="@color/button_material_light"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_pencil"
                android:src="@drawable/ic_action_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_eraser"
                android:src="@drawable/ic_action_stop" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="12dp">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/button_color1"
                    android:layout_weight="1"
                    android:background="#ff000000"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/button_color2"
                    android:layout_weight="1"
                    android:background="#ffff0000"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/button_color3"
                    android:layout_weight="1"
                    android:background="#ff00ff00"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/button_color4"
                    android:layout_weight="1"
                    android:background="#ff0000ff"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />
                <!--<ImageButton-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:id="@+id/button_color5"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="#ffffff00"-->
                    <!--android:layout_marginLeft="2dp"-->
                    <!--android:layout_marginRight="2dp" />-->
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_save"
                android:src="@drawable/ic_action_save" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_clear"
                android:src="@drawable/ic_action_cancel" />

        </LinearLayout>

        <view
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            class="edu.ucla.cs.ndnwhiteboard.DrawingView"
            android:id="@+id/drawingview_canvas"
            android:layout_gravity="center_horizontal"
            android:background="#ffffffff" />
    </LinearLayout>

</RelativeLayout>
